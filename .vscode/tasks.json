{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-I${fileDirname}/src/**/*.hpp",
        "-I${fileDirname}/src/**/*.cpp",
        "${file}",

        "-o",
        "${fileDirname}/${fileDirnameBasename}",

        "-lcurl"
      ],
      "options": {
        "cwd": "${fileDirname}",
        "env": {
          "ENDPOINT": "https://ingress.notifications.int.bbci.co.uk",
          "CA": "/private/etc/pki/certificate.pem",
          "CERT": "/etc/pki/tls/certs/client.crt",
          "CERT_KEY": "/private/etc/pki/tls/private/client.key"
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
