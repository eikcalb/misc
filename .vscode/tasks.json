{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-I${fileDirname}/src/**/*.hpp",
        "-I${fileDirname}/src/**/*.cpp",
        "${file}",

        "-I${fileDirname}/include",
        "-L${fileDirname}/lib",
        "-lcurl",

        "-o",
        "${fileDirname}/${fileDirnameBasename}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
